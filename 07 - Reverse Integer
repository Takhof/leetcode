/**
 * @param {number} x
 * @return {number}
 */
var reverse = function (x) {
  let str = x.toString();
  let revstr = "";

  for (let i = str.length - 1; i >= 0; i--) {
    if (str[0] === "-" && i === str.length - 1) {
      revstr += "-";
      str = str.substring(1);
      i--;
    }
    if (str[0] === 0 && i === str.length - 1) {
      i--;
    }
    revstr += str[i];
  }
  let num = parseInt(revstr);
  if (num > 2 ** 31 - 1 || num < -(2 ** 31)) {
    return 0;
  }
  return num;
};
